  "events": {
    "load": [
      {
        "name": "dbHopeKurseTextbausteine.getBaseByBaseID",
        "parameters": [
          {
            "name": "BaseID",
            "value": "${parameters.BaseID}"
          }
        ],
        "then": [
          {
            "name": "base",
            "type": "set",
            "value": "${result}"
          },
          {
            "name": "dbHopeKurseTextbausteine.getBaseAnredenByAnredeID",
            "parameters": [
              {
                "name": "AnredeID",
                "value": "${this.base.AnredeID}"
              }
            ],
            "then": [
              {
                "name": "getByBaseAnredensForAnredeIDResult",
                "type": "set",
                "value": "${result}"
              }
            ],
            "condition": "this.base.AnredeID != null",
            "type": "invoke"
          }
        ],
        "error": [],
        "type": "invoke"
      },
      {
        "name": "getBaseAnredensForAnredeIDPageSize",
        "type": "set",
        "value": "10"
      },
      {
        "name": "dbHopeKurseTextbausteine.getBaseAnredens",
        "parameters": [
          {
            "name": "$top",
            "value": "${getBaseAnredensForAnredeIDPageSize}"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getBaseAnredensForAnredeIDResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getBaseAnredensForAnredeIDCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
